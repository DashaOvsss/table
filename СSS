
table {
  border-collapse: collapse; /* Об'єднати межі сусідніх комірок */
  width: 100%; /* Зробити таблицю на всю ширину */
}

th, td {
  padding: 8px; /* Додати проміжок навколо тексту в комірках */
  text-align: left; /* Вирівняти текст по лівому краю */
  border: 1px solid #ddd; /* Додати сіру рамку навколо комірок */
}

tr:nth-child(even) { /* Зафарбувати кожен другий рядок */
  background-color: #f2f2f2;
}
